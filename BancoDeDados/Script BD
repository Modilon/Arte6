CREATE DATABASE ARTE6;

CREATE TABLE USUARIO(
	ID_USUARIO	SERIAL 	PRIMARY KEY	NOT NULL ,
	NOME		VARCHAR(60)	NOT NULL,
	EMAIL		VARCHAR(60)	NOT NULL,
	SENHA		VARCHAR(255) NOT NULL
);

CREATE TABLE PUBLICACAO(
	ID_PUBLI		SERIAL	PRIMARY KEY NOT NULL,
	TITL_PUBLI	VARCHAR(60) NOT NULL,
	DESC_PUBLI		VARCHAR(255) NOT NULL,
    COMENTARIO		VARCHAR(255) NOT NULL,
	NOTA_AVAL		INT	NOT NULL,
    DH_INCL			DATETIME,
    FK_USUARIO SERIAL REFERENCES USUARIO (ID_USUARIO)
);

CREATE TABLE CATEGORIA(
	ID_CAT 		SERIAL PRIMARY KEY NOT NULL,
    NOME_CAT	VARCHAR(60)
);

CREATE TABLE PORTFOLIO(
	ID_PORTF 		SERIAL	PRIMARY KEY NOT NULL,
    TITL_PORTF		VARCHAR(60) NOT NULL,
    DESC_PORTF		VARCHAR(255) NOT NULL,
    STATUS_PORTF	BOOLEAN NOT NULL,	
	VALOR			FLOAT NOT NULL,
    FK_USUARIO SERIAL REFERENCES USUARIO (ID_USUARIO),
    FK_PUBLI SERIAL REFERENCES PUBLICACAO(ID_PUBLI),
    FK_CAT SERIAL REFERENCES CATEGORIA(ID_CAT)
);



CREATE TABLE IMAGEM(
	ID_IMG		SERIAL	PRIMARY KEY	NOT NULL,
    NOME_IMG	VARCHAR(60)	NOT NULL,
    DESC_IMG	VARCHAR(255) NOT NULL,
    FK_PORTF SERIAL REFERENCES PORTFOLIO(ID_PORTF)
);
